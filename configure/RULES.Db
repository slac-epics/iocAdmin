# RULES.Db
# Usage: 
# Place this file in your $TOP/configure directory.
# Include this file after $(TOP)/configure/RULES in your *App/Db Makefile.
#
#####================ CA security stuff=======================
$(INSTALL_DB)/%.acf: %.acf
	@echo "Installing $@"
	@$(INSTALL) -d -m 644 $(@F) $(@D)

%.acf: ../%.acf
	@$(CP) $< $@

%.acf: %.acs
	gcc -E -x c -undef -nostdinc $(ACFLAGS) $(EPICS_DBFLAGS) -o$@ -c $<
	ascheck -S"P=$(IOCNAME)" <$@

$(INSTALL_DB)/%.acs: %.acs
	@echo "Installing $@"
	@$(INSTALL) -d -m 644 $(@F) $(@D)

%.acs: ../%.acs
	@$(CP) $< $@
#=============================================================
